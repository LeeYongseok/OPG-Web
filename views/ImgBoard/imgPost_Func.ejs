  var m,
    imgsrc,
    urls = [],
    str = dbdata.body,
    rex = /<img.*?src="([^">]*\/([^">]*?))".*?>/g;
    while (m = rex.exec(str)) {
      urls.push(m[1]);
    }
    if(urls[0]){
      imgsrc = urls[0];
    } else if(dbdata.fileOriginalname && ((/\.(jpe?g|png|gif|bmp)$/i).test(data.fileOriginalname))){
        imgsrc = dbdata.filePath;
    } else {
        imgsrc = '/images/No_image_available.jpg';
    } return imgsrc;
}

