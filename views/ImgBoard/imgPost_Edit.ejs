<!DOCTYPE html>
<html>
  <head>
    <%- include ../partials/head.ejs %>
    <%- include ../partials/inc_summernote.ejs %>
    <link rel="stylesheet" href="/stylesheets/photoStyle.css">
    <link rel="stylesheet" href="/stylesheets/edit.css">
  </head>
  <body>
    <%- include ../partials/header+nav.ejs %>
    <div class="page-wrap">
        <section class="programming">
            <div class="container">
              <div class="row">
                 <div class="col-xs-12">
                     <h2><%= main_menu %></h2>
                 </div>
             </div>
             <div class="row">
                <div class="col-xs-1"></div>
                <div class="col-xs-6 sub_info">
                </div>
                <div class="col-xs-5">
                    <div class="circle" id="circle1"></div>
                    <div class="circle" id="circle2"></div>
                    <div class="circle" id="circle3"></div>
                </div>
              </div>

              <div class="new edit">
                <h3>New</h3>
                <form class="posts_form" action="/<%=path%>/<%=data.id%>?_method=PUT&page=<%=page%>" method="post" enctype="multipart/form-data">
                  <label for="edit_title">Title</label>
                  <input id="edit_title" type="text" name="title" value="<%=data.title%>">
                  <label for="edit_body">Body</label>
                  <textarea id="summernote" name="body"><%=data.body%></textarea>
                  <input type="hidden" name="images" id="images" value="">
                  <div class="col-xs-8">
                    <% if(data.filePath != undefined){ %>
                      <input id="input" type="file" name="photo" disabled> Uploaded file already exist.
                    <% } else { %>
                      <input id="input" type="file" name="photo">
                    <%} %>
                  </div>
                  <br />
                  <button type="submit" class="btn">Submit</button>
                </form>
                <a href="/<%=path%>/<%=data.id%>?page=<%=page%>"><button class="btn">Back</button></a>
              </div>
              <%- include ../partials/footer.ejs %>
